// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // Nome do banco de dados
}

// Modelo de Usu√°rio com Plano Vinculado
model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  password       String
  name           String?
  plan           String
  paymentStatus  String
  resetCode      String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// Modelo de Sinais de Trade
model TradeSignal {
  id        Int      @id @default(autoincrement())
  message   String   // A mensagem completa do sinal
  createdAt DateTime @default(now())
}
